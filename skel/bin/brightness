#!/bin/sh

usage="usage: $0 -c {up|down}"
command=
increment=3%

while getopts h o
do case "$o" in
    h) echo "$usage"; exit 0;;
    ?) echo "$usage"; exit 0;;
esac
done

shift $(($OPTIND - 1))
command=$1

if [ "$command" = "" ]; then
    echo "usage: $0 {up|down}"
    exit 0;
fi

display_brightness=0

if [ "$command" = "up" ]; then
	xbacklight -inc $increment
    display_brightness=$(xbacklight -get)
fi

if [ "$command" = "down" ]; then
    xbacklight -dec $increment
    display_brightness=$(xbacklight -get)
fi

notify-send " " -t 500 -i xfpm-brightness-lcd -h int:value:$display_brightness -h string:synchronous:brightness
